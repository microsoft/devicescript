{
    "name": "DeviceScript-workspace",
    "version": "2.2.3",
    "private": true,
    "scripts": {
        "setup": "git submodule update --init --recursive && git pull && npm run install && npm install -g -u jacdac-cli",
        "build": "(cd jacdac-ts && npm run build) && (cd vscode && npm run buildicons) && node ./build.js",
        "build-fast": "(cd jacdac-ts && node ./build.js --fast) && node ./build.js --fast",
        "watch": "node ./build.js --watch",
        "docs": "cd website && npm run start",
        "dev": "npm run watch & npm run docs",
        "devtools": "npm run build && node ./cli/devicescript devtools",
        "test:compiler": "node ./cli/devicescript ctool --test",
        "test:test": "cd vscode/sampleprj/packages/test && npm run test",
        "test:cowsay": "cd vscode/sampleprj/packages/cowsay && npm run test",
        "test:observables": "cd vscode/sampleprj/packages/observables && npm run test",
        "test:cloud": "cd vscode/sampleprj/packages/cloud && npm run test",
        "test:settings": "cd vscode/sampleprj/packages/settings && npm run test",
        "test": "npm run test:compiler && npm run test:test && npm run test:settings && npm run test:observables && npm run test:cloud && npm run test:cowsay",
        "presemantic": "node ./scripts/presemantic.mjs",
        "boards": "node ./cli/devicescript ctool --fetch-boards compiler/src/boards.json",
        "bump": "node scripts/bump.mjs",
        "hwdocs": "node scripts/genhwsupport.mjs",
        "localboards2": "node ./cli/devicescript ctool --local-boards ../.. --fetch-boards compiler/src/boards.json",
        "localboards1": "node ./cli/devicescript ctool --local-boards .. --fetch-boards compiler/src/boards.json"
    },
    "workspaces": [
        "interop",
        "compiler",
        "cli",
        "runtime/devicescript-vm",
        "runtime/jacdac-c/jacdac",
        "jacdac-ts",
        "dap",
        "plugin",
        "vscode",
        "vscode/sampleprj/packages/*",
        "website"
    ],
    "devDependencies": {
        "esbuild": "^0.17.11",
        "semver": "^7.3.8",
        "zx": "^7.2.1"
    }
}
