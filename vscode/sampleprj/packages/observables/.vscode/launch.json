{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "DeviceScript",
            "type": "devicescript",
            "request": "launch",
            "program": "${workspaceFolder}/src/main-test.ts",
            "deviceId": "${command:deviceScriptSimulator}",
            "stopOnEntry": false
        },
        {
            "name": "Sim",
            "request": "launch",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${workspaceFolder}/sim/app.ts"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "env": {
                "TS_NODE_PROJECT": "${workspaceFolder}/sim/tsconfig.json"
            }
        }
    ],
    "compounds": [
        {
            "name": "DeviceScript+Sim",
            "configurations": [
                "DeviceScript",
                "Sim"
            ],
            "stopAll": true
        }
    ]
}
